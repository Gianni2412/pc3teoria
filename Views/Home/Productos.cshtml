@model List<Producto>

<h1>lista de Productos</h1>

<table class="table border">
    <tr>
        <th>ID</th>
        <th>NOMBRE</th>
        <th>PRECIO</th>
        <th>FOTO</th>
        <th>CATEGORIA</th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.Nombre</td>
            <td>@item.Precio</td>
            <td>@item.Foto</td>
            <td>
                @item.Categoria.Nombre


            </td>




        </tr>
    }

    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="4" class="text-center">No se ha encontrado Productos</td>
        </tr>
    }


</table>

